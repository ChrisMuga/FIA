<div id="explore" class="py-3">
    <form action="/process" method = "post">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2>Search for your preference</h2>
                    <div class="form-group">
                        <label for="">Select Location</label>
                        <div class="row">
                            <div class="col-6">
                                <p><input type="checkbox" name="locations" value="Town"> Town</p>
                                <p><input type="checkbox" name="locations" value="Parklands"> Parklands</p>
                                <p><input type="checkbox" name="locations" value="Westlands"> Westlands</p>
                                <p><input type="checkbox" name="locations" value="Ngara"> Ngara</p>
                            </div>
                            <div class="col-6">
                                <p><input type="checkbox" name="locations" value="Pangani"> Pangani</p>
                                <p><input type="checkbox" name="locations" value="Ngumo Estate"> Ngumo Estate</p>
                                <p><input type="checkbox" name="locations" value="Kileleshwa"> Kileleshwa</p>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="">Price Range</label>
                        <input list="price-range" name = "priceRange" class="form-control">
                        <datalist id="price-range">
                          <option value="A">5,000 - 10,000</option>
                          <option value="B">10,000 - 15,000</option>
                          <option value="C">15,000 - 20,000</option>
                          <option value="D">20,000 - 25,000</option>
                          <option value="E">25,000 - 30,000</option>
                          <option value="F">30,000 - 40,000</option>
                        </datalist>
                    </div>
                </div>
                <div class="col-md-6">
                    <h2>A few personal details</h2>
                    <div class="form-group">
                        <label for="">Your Full Names</label>
                        <input type="text" class="form-control" name="name" placeholder="First, middle and last name" required>
                    </div>
                    <div class="form-group">
                        <label for="">Email Address</label>
                        <input type="email" class="form-control" name="email" placeholder="eg. person@example.com" required>
                    </div>
                    <div class="form-group">
                        <label for="">Mobile Number</label>
                        <input type="text" class="form-control" name="phone" placeholder="+2547XXXXXXXX" required>
                    </div>
                    <div class="form-group">
                        <label for="">Physical Address</label>
                        <input type="text" class="form-control" name="currentLocation" placeholder="Where do you currently stay?" required>
                    </div>
                    <div class="form-group">
                        <label for="">University Campus</label>
                        <input type="text" class="form-control" name="universityCollege" placeholder="What university/college do you attend?" required>
                    </div>
                    <button type="submit" class="btn">Explore</button>
                </div>
            </div>
        </div>
    </form>
</div>